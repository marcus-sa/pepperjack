{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}