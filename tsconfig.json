{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": [
    "src",
    "node_modules/lodash-es"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
