{
  "name": "pepperjack",
  "version": "0.0.1",
  "description": "Document database for IPFS",
  "main": "dist/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "nodemon --config=nodemon.json",
    "test": "nyc --require ts-node/register mocha test/**/*.spec.ts --reporter spec",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write && git status"
  },
  "keywords": [
    "ipfs",
    "nosql",
    "docstore",
    "db"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.1",
    "@types/node": "^10.3.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "prettier": "^1.13.4",
    "ts-node": "^6.1.0",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "ipfs": "^0.29.3",
    "reflect-metadata": "^0.1.12"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "test/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "npm run format",
      "git add"
    ]
  }
}
